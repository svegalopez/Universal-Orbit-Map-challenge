{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strict": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2017",
        "rootDir": "src",
        "outDir": "dist"
    }
}